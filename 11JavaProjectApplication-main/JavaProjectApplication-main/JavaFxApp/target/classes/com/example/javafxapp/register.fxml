<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane minHeight="-Infinity" prefHeight="553.0" prefWidth="737.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafxapp.RegisterController">
    <center>
        <AnchorPane prefHeight="958.0" prefWidth="201.0" BorderPane.alignment="CENTER">
            <VBox fx:id="vboxZone" alignment="TOP_RIGHT" layoutX="-24.0" layoutY="275.2" prefHeight="638.0"
                  prefWidth="406.0" spacing="15.0" AnchorPane.topAnchor="320.0">
                <opaqueInsets>
                    <Insets/>
                </opaqueInsets>
                <TextField fx:id="usernameField" prefHeight="44.0" prefWidth="324.0"
                           promptText="Enter Username or Email"
                           style="-fx-prompt-text-fill: black; -fx-background-color: D6CE80;">
                    <font>
                        <Font name="AvenirLTStd-Roman" size="12.0"/>
                    </font>
                    <VBox.margin>
                        <Insets top="15.0"/>
                    </VBox.margin>
                </TextField>
                <PasswordField fx:id="enterPasswordField" prefHeight="44.0" prefWidth="282.0"
                               promptText="Enter Password"
                               style="-fx-prompt-text-fill: black; -fx-background-color: D6CE80;"/>
                <PasswordField fx:id="confirmPasswordField" prefHeight="44.0" prefWidth="282.0"
                               promptText="Confirm Password"
                               style="-fx-prompt-text-fill: black; -fx-background-color: D6CE80;"/>
                <DatePicker fx:id="dateofbirthField" prefHeight="29.0" prefWidth="406.0" promptText="Date of Birth"
                            style="-fx-prompt-text-fill: black; -fx-background-color: D6CE80;">
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                </DatePicker>
                <Button fx:id="registerButton" mnemonicParsing="false" onAction="#registerButtonOnAction"
                        prefHeight="17.0" prefWidth="163.0" style="-fx-background-color: CC9600;" text="Register"
                        textFill="WHITE">
                    <font>
                        <Font name="AvenirLTStd-Heavy" size="18.0"/>
                    </font>
                    <VBox.margin>
                        <Insets top="15.0"/>
                    </VBox.margin>
                </Button>
                <Button fx:id="backButton" mnemonicParsing="false" onAction="#getBackScene" prefHeight="30.0"
                        prefWidth="164.0" style="-fx-background-color: CC9600;" text="Back" textFill="WHITE">
                    <font>
                        <Font name="AvenirLTStd-Heavy" size="18.0"/>
                    </font>
                </Button>
                <Label fx:id="confirmPasswordMessageLabel" prefHeight="48.0" prefWidth="238.0" textFill="RED">
                    <font>
                        <Font name="System Bold" size="12.0"/>
                    </font>
                </Label>
                <Label fx:id="passwordMessageLabel" prefHeight="48.0" prefWidth="237.0" textFill="RED">
                    <font>
                        <Font name="System Bold" size="12.0"/>
                    </font>
                </Label>
                <Label fx:id="emailMessageLabel" prefHeight="48.0" prefWidth="249.0" textFill="RED">
                    <font>
                        <Font name="System Bold" size="12.0"/>
                    </font>
                </Label>
                <Label fx:id="usernameMessageLabel" prefHeight="48.0" prefWidth="249.0" textFill="RED">
                    <font>
                        <Font name="System Bold" size="12.0"/>
                    </font>
                </Label>
                <Label fx:id="registerMessageLabel" textFill="#08b216">
                    <font>
                        <Font name="System Bold" size="12.0"/>
                    </font>
                </Label>
            </VBox>
            <Label layoutX="100.0" layoutY="237.0" text="Register" textFill="#cc9600">
                <font>
                    <Font name="AvenirLTStd-Black" size="36.0"/>
                </font>
            </Label>
            <Label alignment="CENTER" layoutX="58.0" layoutY="292.0" prefHeight="28.0" prefWidth="227.0"
                   text="Register Your Account!" textFill="#ca891d">
                <font>
                    <Font name="System Bold" size="18.0"/>
                </font>
            </Label>
            <VBox fx:id="invalidInfoField" layoutX="-23.0" layoutY="564.0" prefHeight="210.0" prefWidth="241.0"
                  spacing="10.0">
                <children>
                    <Label fx:id="errorMessageLabel" textFill="RED" wrapText="true"/>
                </children>
            </VBox>
        </AnchorPane>
    </center>
    <left>
        <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
    </left>
</BorderPane>